<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGrey"
    android:orientation="vertical"
    tools:context="com.example.student.userproject.fragment.AboutFragment">

    <LinearLayout
        android:id="@+id/owner_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_owner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Owner"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_owner_name_surname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Tigran Vanyan"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/about_app"
        android:text="@string/about_app"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content"
        android:layout_below="@+id/owner_info"/>

    <TextView
        android:id="@+id/tv_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_app"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Members"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_members"
        android:layout_margin="20dp">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGrey">

        <TextView
            android:id="@+id/vtc_and_team"
            android:autoLink="web"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:linksClickable="true"
            android:text="\@2017 VTC Android Team"
            android:textColor="@color/colorBlack"
            android:textColorLink="@color/colorBlack"
            android:background="@color/colorGreyLight"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>
